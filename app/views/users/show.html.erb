
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <table class="table">
        <tr>
          <td>今日の投稿数</td>
          <td>昨日の投稿数</td>
          <td>前日比</td>
        </tr>
        <tr>
          <td><%= @books_tody.count %></td>
          <td><%= @books_before.count %></td>
          <td><%= @user.day_rate %>%</td>
        </tr>
      </table>

      <table class="table">
        <tr>
          <td>今週の投稿数</td>
          <td>前週の投稿数</td>
          <td>前週比</td>
        </tr>
        <tr>
          <td><%= @week %></td>
          <td><%= @privous_week %></td>
          <td><%= @user.week_rate %>%</td>
        </tr>
      </table>
    <%= form_with url: user_books_search_path(@user.id),method: :get,remote: true do |f| %>
      <%= f.date_field :day %>
      <%= f.submit "検索"%>
    <% end %>
    <div id="search">
      <% if @search_books.present? %>
        <%= render "search_book", search_books: @search_books %>
      <% end %>
    </div>
    </div>
  </div>
</div>